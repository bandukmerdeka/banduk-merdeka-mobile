<?xml version='1.0' encoding='utf-8'?>
<widget id="org.banduk.mobile" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Banduk Relawan</name>
    <description>
        Applikasi Bantuan Penduduk
    </description>
    <author email="" href="https://github.com/bandukmerdeka/banduk-relawan-mobile">
        Agus Muhammad Ramdan & Giansar Pratiknya
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
	<icon src="res/icon.png" />
    <splash src="res/splashscreen.png"/>
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="3000" />
</widget>
